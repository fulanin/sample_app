<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= will_paginate %>
  <table>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= gravatar_for user, size: 50 %></td>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate %>

<br>

<%= link_to 'New User', new_user_path %>
